<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="@dimen/slyce_dimen_25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/product_image"
            android:elevation="18dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="13dp"
            android:textStyle="bold"
            tools:text="product_name" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_alignLeft="@id/product_name"
            android:text="product_price"
            android:textColor="#a90000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_link"
            android:autoLink="web"
            android:linksClickable="true"
            android:layout_below="@id/product_price"
            android:layout_alignLeft="@id/product_price"
            android:textColor="@color/slyce_color_blue"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>